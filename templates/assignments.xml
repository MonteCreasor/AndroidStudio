<templateSet group="assignments">
  <template name="tds" value="/*todo:start*/" description="Inserts a TODO block start tag" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="tde" value="/*todo:end*/" description="Inserts a TODO block end tag" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="tdb" value="// TODO: $COMMENT$&#10;/*todo:start*/&#10;$CODE$&#10;/*todo:end*/" description="Inserts a TODO block with comment, start tag, and end tag" toReformat="false" toShortenFQNames="true">
    <variable name="COMMENT" expression="&quot;Place your code below ...&quot;" defaultValue="" alwaysStopAt="true" />
    <variable name="CODE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="tdc" value="// TODO: $COMMENT$" description="Inserts a TODO comment (with no start and end tags)" toReformat="false" toShortenFQNames="true">
    <variable name="COMMENT" expression="&quot;Place your code below ...&quot;" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="bc" value="/*&#10; * $COMMENT$&#10; */" description="Javadoc style inline block comment" toReformat="false" toShortenFQNames="true">
    <variable name="COMMENT" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
</templateSet>